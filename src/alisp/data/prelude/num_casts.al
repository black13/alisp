(defun int-to-hex (num)
  (let ((digits "0123456789ABCDEF")
        (n num)
        (out ""))
    (while (> n 0 )
      (setq out (string-join out (to-string (nth digits (mod n 16)))))
      (setq n (/ n 16)))
    out))

(defun int-to-oct (num)
  (let ((digits "01234567")
        (n num)
        (out ""))
    (while (> n 0 )
      (setq out (string-join out (to-string (nth digits (mod n 8)))))
      (setq n (/ n 8)))
    out))
